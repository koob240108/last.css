html, body
  margin: 0
  padding: 0

a
  text-decoration: none
  +dark()
    color: #8ab4f8
  +light()
    color: #1a0dab
  &:hover
    text-decoration: underline

code:not(pre code)
  padding: 0 fs(.25)
  display: inline-block
  font-weight: lighter
  +light()
    background-color: fc(.03)
  +dark()
    background-color: fc(.06)
  &:not(:first-child)
    margin-left: fs(.25)
  &:not(:last-child)
    margin-right: fs(.25)

pre:has(code)
  line-height: 1.5
  margin: 1em 0
  padding: 1em 1.5em
  +light()
    background-color: fc(.03)
  +dark()
    background-color: fc(.088)

p, blockquote
  margin: 1em 0
  line-height: 1.5
blockquote
  border-left: us(.5) solid fc(.1)
  color: fc(.8)
  +light()
    background-color: fc(.02)
  +dark()
    background-color: fc(.08)
  padding: us() 0 us() 1em
  font-size: fs-sm()

h1, h2, h3, h4, h5
  font-weight: bold
  margin: 2em 0 1em
  line-height: 1

h1
  fs(2)
  & + h2
    margin-top: 0

h2
  fs(1.5)
  & + h3
    margin-top: 0

h3
  fs(1.25)
  & + h4
    margin-top: 0

h4
  fs(1.125)
  & + h5
    margin-top: 0

h5
  fs(1)
