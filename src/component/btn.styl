a, button, input[type=submit], input[type=reset]
  &.btn
    box-sizing: border-box
    display: inline-block
    border: none
    vertical-align: middle // 否则 button 和 a 会错位
    outline: none

    clickable()
    border-radius()

    font-size: fs-sm()
    padding: 0 1em
    height: 2.5em
    margin: 0
    background-color: fc(.1)
    color: fc()
    cursor: pointer
    &.fw
      display: block
      width: 100%
    &.big, &.fw // full width 就大
      font-size: fs()

a.btn
  text-align: center
  line-height: 2.5em
